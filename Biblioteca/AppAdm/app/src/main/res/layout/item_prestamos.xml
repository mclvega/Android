<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:layout_gravity="center"
            android:layout_width="150dp"
            android:text="@string/lblnombrelibro"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/lbl_nombrelibPres"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="textview"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:layout_gravity="center"
            android:layout_width="150dp"
            android:text="@string/lblrunusuario"
            android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/lbl_runPre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="textview"
        android:layout_gravity="center"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:layout_gravity="center"
            android:layout_width="150dp"
            android:text="@string/lblnombreusuario"
            android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/lbl_nombrePre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="textview"
        android:layout_gravity="center"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:layout_gravity="center"
            android:layout_width="150dp"
            android:text="@string/lblfechalpibro"
            android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/lbl_prestamoPre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:inputType="date"
        android:text="textview"
        android:layout_gravity="center"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:layout_gravity="center"
            android:layout_width="150dp"
            android:text="@string/lblfechaldibro"
            android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/lbl_devolucionPre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="textview"
        android:layout_gravity="center"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</LinearLayout>